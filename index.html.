    <script>
        // كود الحديث العشوائي
        const hadiths = [
            "قال رسول الله ﷺ: «من دلَّ على خير، فله مثل أجر فاعله»",
            "قال رسول الله ﷺ: «لا تغضب، ولك الجنة»",
            "قال رسول الله ﷺ: «اتق الله حيثما كنت، وأتبع السيئة الحسنة تمحها»",
            "قال رسول الله ﷺ: «الكلمة الطيبة صدقة»",
            "قال رسول الله ﷺ: «عينان لا تمسهما النار: عين بكت من خشية الله، وعين باتت تحرس في سبيل الله»"
        ];

        function newHadith() {
            const random = Math.floor(Math.random() * hadiths.length);
            document.getElementById('hadith-text').style.opacity = 0;
            setTimeout(() => {
                document.getElementById('hadith-text').innerText = hadiths[random];
                document.getElementById('hadith-text').style.opacity = 1;
            }, 300);
        }

        // كود مشغل القرآن
        let audio = document.getElementById('quranPlayer');
        function playAudio(url) {
            if (!audio.paused && audio.src === url) {
                audio.pause();
            } else {
                audio.src = url;
                audio.play();
            }
        }

        // كود المسبحة
        let count = 0;
        function incrementCounter() {
            count++;
            document.getElementById('counter').innerText = count;
            // اهتزاز بسيط للهاتف عند التسبيح (تجربة مستخدم رائعة)
            if (navigator.vibrate) navigator.vibrate(50);
        }
        function resetCounter() {
            count = 0;
            document.getElementById('counter').innerText = 0;
        }
    </script>

